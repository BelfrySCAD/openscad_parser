{
    // Python interpreter path - points to the virtual environment
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    // Auto-activate the virtual environment
    "python.terminal.activateEnvironment": true,
    // Use the virtual environment for linting
    "python.linting.enabled": true,
    // Use the virtual environment for testing
    "python.testing.pytestEnabled": true,
    "python.testing.pytestPath": "${workspaceFolder}/.venv/bin/pytest",
    // Auto-detect virtual environments in workspace
    "python.venvPath": "${workspaceFolder}",
    "python.venvFolders": [
        ".venv"
    ],
    // Python analysis settings
    "python.analysis.extraPaths": [
        "${workspaceFolder}"
    ],
    "python.analysis.typeCheckingMode": "basic",
    // Format on save (optional)
    "editor.formatOnSave": true,
    // Python-specific settings
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.cwd": "${workspaceFolder}",
    "python.testing.autoTestDiscoverOnSaveEnabled": true
}